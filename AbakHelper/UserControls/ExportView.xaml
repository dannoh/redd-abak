                        <!--
                        </StackPanel>
                    </materialDesign:Card>-->
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl >
            <Button Command="{Binding ExportToXeroCommand}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="0" Margin="15">Export To Xero</Button>
            <GridSplitter Grid.Column="1" Width="2" VerticalAlignment="Stretch" />
            <DockPanel x:Name="webBrowserContainer" Visibility="Collapsed"  Grid.Column="1">
                <ToolBarTray DockPanel.Dock="Top">
                    <ToolBar Style="{DynamicResource MaterialDesignToolBar}" ClipToBounds="False">
                        <Button ToolTip="Email" Command="{Binding EmailInvoiceCommand}">
                            <materialDesign:PackIcon Kind="Email" />
                        </Button>
                        <Button ToolTip="Save" Command="{Binding SaveInvoiceCommand}">
                            <materialDesign:PackIcon Kind="ContentSave" />
                        </Button>
                        <Button ToolTip="Approve" Command="{Binding ApproveInvoiceCommand}">
                            <materialDesign:PackIcon Kind="AccountCheck" />
                        </Button>
                    </ToolBar>
                </ToolBarTray>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <WebBrowser x:Name="webBrowser"/>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
